{{#partial "content"}}

    {{#if editCategory}}
        <h1>Edit this Category!</h1>
        <form action="/categories/{{editCategory.id}}/update" method="post">
            <label for="name">Edit this category</label>
            <input id="name" name="name" type="text" value="{{editCategory.name}}">

    {{else}}
    <h1>Add a new Category!</h1>

    <form action="/categories/new" method="post">
        <label for="name">Category Name</label>
        <input id="name" name="name" type="text">

    {{/if}}
        <button type="submit" class="btn btn-default">Go!</button>
    </form>
    </form>
{{/partial}}

{{> layout.hbs}}